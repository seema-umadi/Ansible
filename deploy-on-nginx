---
- name: install and start nginx 
  hosts: all
  become: true
  tasks: 
  - name: Install nginx
    apt: 
      name: nginx
      state: latest
  - name: start nginx
    service: 
      name: nginx
      state: started
  - name: start enable
    service: 
      name: nginx
      state: restarted
  - name: Create file
    file:
        path: /var/www/html/index.html
        state: touch
  - name: Add content to file
    lineinfile:
        path: /var/www/html/index.html
        line: "hello"
